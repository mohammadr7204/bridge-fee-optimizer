# Environment Variables for BridgeCompare Production

# Node environment
NODE_ENV=production

# API Keys for Bridge Services
STARGATE_API_KEY=your_stargate_api_key_here
ACROSS_API_KEY=your_across_api_key_here
HOP_API_KEY=your_hop_api_key_here

# Market Data API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Redis/Upstash Configuration
UPSTASH_REDIS_URL=your_upstash_redis_url_here
UPSTASH_REDIS_TOKEN=your_upstash_redis_token_here
# Alternative: Standard Redis URL
# REDIS_URL=redis://user:password@host:port

# Analytics and Error Tracking
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your_vercel_analytics_id
SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Security
HCAPTCHA_SITE_KEY=your_hcaptcha_site_key
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key
# Cloudflare Turnstile Alternative
# TURNSTILE_SITE_KEY=your_turnstile_site_key
# TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# CORS Configuration
ALLOWED_ORIGINS=https://bridgecompare.com,https://www.bridgecompare.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=600
RATE_LIMIT_PER_DAY=10000

# Cache Settings (in seconds)
CACHE_TTL=300
MARKET_DATA_CACHE_TTL=300
QUOTE_CACHE_TTL=300

# Affiliate Configuration
AFFILIATE_ID=bridgecompare
STARGATE_AFFILIATE_CODE=bridgecompare
ACROSS_AFFILIATE_CODE=bridgecompare
HOP_AFFILIATE_CODE=bridgecompare

# Database URL (for tracking and analytics)
DATABASE_URL=postgresql://user:password@host:port/database

# API URLs (override defaults if needed)
# STARGATE_API_URL=https://api.stargate.finance/api/v1/quotes
# ACROSS_API_URL=https://app.across.to/api/suggested-fees
# HOP_API_URL=https://api.hop.exchange/v1/quote

# Feature Flags
ENABLE_CAPTCHA=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHE=true

# Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.*.com"

# Monitoring
UPTIME_ROBOT_API_KEY=your_uptime_robot_key
STATUSPAGE_API_KEY=your_statuspage_key